<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Kontak</h2>

            <!-- Catching Error -->
            <% if (typeof errors != 'undefined') { %>

                <!-- Getting Message -->
                <div class="alert alert-danger" role="alert">
                    <ul>
                        
                        <!-- Foreach errors -->
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %> </li>
                        <% }) %>

                    </ul>
                </div>
            <% } %>

            <!-- Form Tambah Kontak -->
            <form method="post" action="/contact?_method=PUT">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                <input type="hidden" name="_id" value="<%= contact._id %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>">
                </div>
                <div class="mb-3">
                  <label for="noHp" class="form-label">Nomor HP</label>
                  <input type="text" class="form-control" id="noHp" name="noHp" required value="<%= contact.noHp %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah Data Kontak</button>
            </form>

        </div>
    </div>
</div>