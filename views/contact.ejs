<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Kontak</h2>

            <!-- Button Add Contact -->
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Kontak</a>

            <!-- Catching Flash -->
            <% if (msg.length !== 0) { %>

                <!-- Getting Message -->
                <div class="alert alert-success" role="alert">
                    <%= msg %> 
                </div>
            <% } %>

            <table class="table table-stripped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Nomor HP</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                    <!-- Condition if empty -->
                    <% if (contacts.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Data Kontak Masih Kosong
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% let no = 1; %> 
                    <!-- Looping -->
                    <% contacts.forEach((contact, index) => { index++ %>  
                        <tr>
                            <th scope="row"><%= index++ %></th>
                            <td><%= contact.nama %></td>
                            <td><%= contact.noHp %></td>
                            <td>
                                <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                            </td>
                        </tr>
                    <% }) %>

                </tbody>
              </table>

        </div>
    </div>
</div>